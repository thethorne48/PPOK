@{
    ViewBag.Title = "Today's Notification";
}

@section additionalCSS{
    <link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/glyphAndText.css" rel="stylesheet" />
}

<style>
    body {
        background-image: url('../../Content/Test.png');
        background-size: 100% 90%;
        background-repeat: no-repeat;
    }
</style>

<div>

    <div style="width: 100%" class="flexBox">
        <label class="myLabel btn-primary btn flexButton">
            <input type="file" onchange="previewFile()" required />
            CSV
            <span class="glyphicon glyphicon-open"></span>
            Upload
        </label>
        <button class="btn-primary btn flexButton" onclick="window.landingPage.Send()">
            Send
            <span class="glyphicon glyphicon-envelope"></span>
            Reminders
        </button>
        <button class="btn-primary btn flexButton" onclick="window.location.href('/FillPrescription/Index')" ;">
            Refill
            <span class="glyphicon glyphicon-check"></span>
            Presriptions
        </button>
    </div>


    <div style="background-color: #bcc0c6; border: .5vw solid #85888c; padding: 1%; margin: 2%">
        @{Html.RenderAction("ReturnTable", "LandingPage");}
    </div>

</div>

@section scripts{
    <script src="http://code.jquery.com/jquery-1.10.1.min.js?Build=@Guid.NewGuid().ToString()"></script>
    <script src="~/Content/DataTables/datatables.min.js?Build=@Guid.NewGuid().ToString()"></script>
    <script src="~/Content/DataTables/AutoFill-2.1.3/js/dataTables.autoFill.min.js?Build=@Guid.NewGuid().ToString()"></script>
    <script src="@Url.Content("~/Scripts/csvPicker.js?Build=@Guid.NewGuid().ToString()")"></script>
    <script src="~/PageScripts/LandingPage.js?Build=@Guid.NewGuid().ToString()"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#myTable').DataTable(
                {
                    "scrollY": "200px",
                    "scrollCollapse": true,
                    "bLengthChange": false,
                    "bFilter": true,
                    "bInfo": false,
                    "bAutoWidth": false
                }
           );
            window.landingPage.init();
        })

    </script>
}