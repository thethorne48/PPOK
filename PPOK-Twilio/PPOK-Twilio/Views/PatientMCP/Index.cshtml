@using PPOK.Domain.Types;
@model PPOK.Domain.Types.Patient
@{
    ViewBag.Title = "Manage Contact Preferences";
}

<h1>@ViewBag.Title</h1>

<form action="">
    <input type="radio" name="choice-preference" id="choice-preference-phone" required> Phone<br>
    <input type="radio" name="choice-preference" id="choice-preference-text" required> Text<br>
    <div>
       <input type="radio" name="choice-preference" id="choice-preferecne-email" required> Email<br>

        <div class="reveal-if-active">
            <label for="email-address">Email Address</label>
            <input type="text" id="email-address" name="email-address" class="require-if-active" data-require-pair="#choice-preference-email"
                   value="@Model.Email">
        </div>
    </div>
    <input type="radio" name="choice-preference" id="choice-preference-stop" required> Stop Contacting Me
</form>

    <script type="text/javascript">
        document.getElementById("@Model.ContactPreference.ToString()").checked = true;
    </script>

<script src="@Url.Content("~/Scripts/MCP.js")"></script>
<link rel="stylesheet"
      type="text/css"
      href="~/Content/MCP.css"/>
