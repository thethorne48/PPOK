<input style="float:right" class="search" id="search" placeholder="Search" />
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Sender Type
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody class="list">
        @if (Model != null)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td id="name">
                        @item.Patient.LastName, @item.Patient.FirstName
                    </td>
                    <td id="descript">
                        @item.Drug.Name
                    </td>
                    <td id="senderType">
                        @item.Patient.Phone
                    </td>
                    <td>
                        <button class="btn btn-primary" data-toggle="modal" data-target="#myModalNorm">
                            Reject
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>